{
  "compilerOptions": {
    "sourceMap": false,
    "baseUrl": ".",
    "declaration": true,
    "downlevelIteration": true,
    "target": "ES5",
    "lib": ["es2015", "es2015.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "paths": {
      "stimmer": ["../store/src"]
    },
    "strict": true,
    "inlineSourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}